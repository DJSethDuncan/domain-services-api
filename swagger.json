{
    "swagger": "2.0",
    "info": {
        "description": "A tool to get some information about given domains/IPs.",
        "version": "1.0.0",
        "title": "Domain Services API",
        "contact": {
            "email": "sethduncan@gmail.com"
        }
    },
    "host": "domain-services-api.herokuapp.com",
    "basePath": "/",
    "schemes": [
        "https",
        "http"
    ],
    "paths": {
        "/domain": {
            "post": {
                "summary": "Get data about a given domain",
                "description": "",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Request object with your parameters",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/domainRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Valid Response",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/domainResponse"
                            }
                        }
                    },
                    "405": {
                        "description": "Invalid input"
                    }
                }
            }
        }
    },
    "definitions": {
        "domainRequest": {
            "type": "object",
            "properties": {
                "domain": {
                    "type": "string",
                    "example": "www.google.com"
                },
                "services": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "geolocation",
                            "rdap",
                            "reversedns",
                            "ping"
                        ]
                    }
                }
            },
            "xml": {
                "name": "Order"
            }
        },
        "domainResponse": {
            "type": "object",
            "properties": {
                "domain": {
                    "type": "string",
                    "example": "www.google.com"
                },
                "geolocation": {
                    "type": "object"
                },
                "rdap": {
                    "type": "object"
                },
                "reversedns": {
                    "type": "object"
                },
                "ping": {
                    "type": "object"
                }
            }
        },
        "ApiResponse": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "integer",
                    "format": "int32"
                },
                "type": {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                }
            }
        }
    }
}